<Window x:Class="XVB_GUI.AddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XVB_GUI"
        mc:Ignorable="d"
        Title="Add/Edit Address" Height="100" Width="400" Background="Black">
    <StackPanel>
        <TextBlock Foreground="White" HorizontalAlignment="Center">Enter Monero Address</TextBlock>
        <TextBox Width="300" Background="DarkGray" x:Name="tbx_Address"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Margin="5" x:Name="btn_Submit" Click="btn_Submit_Click">Submit</Button>
            <Button Margin="5" x:Name="btn_Close" Click="btn_Close_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
